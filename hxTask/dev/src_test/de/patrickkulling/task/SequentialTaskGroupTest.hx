package de.patrickkulling.task;import de.patrickkulling.task.mocks.MockTask;import massive.munit.Assert;class SequentialTaskGroupTest{	var taskGroup:SequentialTaskGroup;	@Before	public function before()	{		taskGroup = new SequentialTaskGroup();	}	@Test	public function test_newTaskGroupShouldNotContainElements():Void	{		Assert.areEqual(0, taskGroup.count());	}	@Test	public function test_addShouldAddTask():Void	{		taskGroup.add(new Task());		Assert.areEqual(1, taskGroup.count());	}	@Test	public function test_addCanAddSameTaskMultipleTimes():Void	{	  	var task:Task = new Task();		taskGroup.add(task);		taskGroup.add(task);		taskGroup.add(task);		Assert.areEqual(3, taskGroup.count());	}}