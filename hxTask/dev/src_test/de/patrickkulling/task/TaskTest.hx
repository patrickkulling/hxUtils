package de.patrickkulling.task;import de.patrickkulling.task.mocks.MockTask;import massive.munit.Assert;class TaskTest{	var receivedComplete:Bool;	var receivedTask:Task;	@Before	public function before()	{		receivedComplete = false;		receivedTask = null;	}	@Test	public function test_startShouldExecuteDoStart():Void	{		var task:MockTask = new MockTask();		task.start();		Assert.areEqual(1, task.executedCount);	}	@Test	public function test_completeShouldDispatchSignal():Void	{		var task:Task = new Task();		task.completeSignal.bind(handeComplete);		task.complete();		Assert.isTrue(receivedComplete);		Assert.areEqual(task, receivedTask);	}	function handeComplete(task:Task):Void	{		receivedComplete = true;		receivedTask = task;	}}